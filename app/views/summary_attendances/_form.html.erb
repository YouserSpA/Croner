<%= form_for(@summary_attendance) do |f| %>
<% if @summary_attendance.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@summary_attendance.errors.count, "error") %> prohibited this summary_attendance from being saved:</h2>

    <ul>
        <% @summary_attendance.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="form-group">
                <%= f.label :attendace_date %>
            <%= f.date_select :attendace_date, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :check_in_at %>
            <%= f.datetime_select :check_in_at, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :check_out_at %>
            <%= f.datetime_select :check_out_at, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :worked_hours %>
            <%= f.text_field :worked_hours, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :contracted_hours %>
            <%= f.text_field :contracted_hours, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :difference %>
            <%= f.text_field :difference, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :delay %>
            <%= f.text_field :delay, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :permission %>
            <%= f.check_box :permission, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :medical_licence %>
            <%= f.text_area :medical_licence, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :employee_id %>
            <%= f.collection_select :employee_id, Employee.all, :id, :run, prompt: true, :class => 'form-control'  %>
    </div>
<div class="form-group">
                <%= f.label :branch_office_id %>
            <%= f.collection_select :branch_office_id, BranchOffice.all, :id, :name, prompt: true, :class => 'form-control'  %>
    </div>
<div class="actions">
    <%= f.submit :class => "btn btn-success" %>
</div>
<% end %>
